resource "aws_budgets_budget" "main" {
  name              = "platform-aws-poc"
  budget_type       = "COST"
  limit_amount      = var.budget_monthly_usd
  limit_unit        = "USD"
  time_period_start = "2024-01-04_00:00"
  time_period_end   = "2087-06-15_00:00"
  time_unit         = "MONTHLY"


  notification {
    comparison_operator        = "GREATER_THAN"
    threshold                  = 100
    threshold_type             = "PERCENTAGE"
    notification_type          = "FORECASTED"
    subscriber_email_addresses = var.budget_notification_receivers
  }

  notification {
    comparison_operator        = "GREATER_THAN"
    threshold                  = 70
    threshold_type             = "PERCENTAGE"
    notification_type          = "FORECASTED"
    subscriber_email_addresses = var.budget_notification_receivers
  }

  notification {
    comparison_operator        = "GREATER_THAN"
    threshold                  = 50
    threshold_type             = "PERCENTAGE"
    notification_type          = "FORECASTED"
    subscriber_email_addresses = var.budget_notification_receivers
  }
}
